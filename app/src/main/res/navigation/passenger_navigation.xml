<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/passenger_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.rideon.controller.passenger.fragments.Home"
        android:label="@string/title_home"
        tools:layout="@layout/p_fragment_home" />

    <fragment
        android:id="@+id/navigation_available_rides"
        android:name="com.example.rideon.controller.passenger.fragments.AvailableRides"
        android:label="@string/rides"
        tools:layout="@layout/p_fragment_available_routes"/>

    <fragment
        android:id="@+id/navigation_order_history"
        android:name="com.example.rideon.controller.passenger.fragments.OrderHistory"
        android:label="@string/orders"
        tools:layout="@layout/p_fragment_order_history"/>

    <fragment
        android:id="@+id/navigation_p_profile"
        android:name="com.example.rideon.controller.passenger.fragments.Profile"
        android:label="@string/profile"
        tools:layout="@layout/p_fragment_profile">
        <action
            android:id="@+id/navigate_profile_to_profile_settings"
            app:destination="@id/navigation_profile_settings"
            app:restoreState="true"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_profile_settings"
        android:name="com.example.rideon.controller.passenger.fragments.ProfileSettings"
        android:label="Profile Settings"
        tools:layout="@layout/p_fragment_profile_settings"/>

</navigation>