<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:padding="4dp"
    android:theme="@style/Theme.Material3.Dark.NoActionBar">


    <ImageView
        android:id="@+id/iv_rt_item_ar_fragment_ar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_pickup_item_ar_fragment_ar"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/motorcycle"
        android:contentDescription="@string/ride_type"/>

    <TextView
        android:id="@+id/tv_pickup_item_ar_fragment_ar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_rt_item_ar_fragment_ar"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Giza"/>

    <ImageView
        android:id="@+id/view_arrow_item_ar_fragment_ar"
        app:layout_constraintStart_toEndOf="@id/tv_pickup_item_ar_fragment_ar"
        app:layout_constraintTop_toTopOf="@id/tv_pickup_item_ar_fragment_ar"
        app:layout_constraintBottom_toBottomOf="@id/tv_pickup_item_ar_fragment_ar"
        app:layout_constraintEnd_toStartOf="@id/tv_drop_off_item_ar_fragment_ar"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arrow"
        android:src="@drawable/arrow_forward"/>

    <TextView
        android:id="@+id/tv_drop_off_item_ar_fragment_ar"
        app:layout_constraintStart_toEndOf="@id/view_arrow_item_ar_fragment_ar"
        app:layout_constraintTop_toTopOf="@id/tv_pickup_item_ar_fragment_ar"
        app:layout_constraintBottom_toBottomOf="@id/tv_pickup_item_ar_fragment_ar"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Gate 3"/>

    <TextView
        android:id="@+id/tv_date_item_ar_fragment_ar"
        app:layout_constraintStart_toStartOf="@id/tv_pickup_item_ar_fragment_ar"
        app:layout_constraintTop_toBottomOf="@id/tv_pickup_item_ar_fragment_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="21 Jul - 2:35 PM"/>

    <TextView
        android:id="@+id/tv_price_item_ar_fragment_ar"
        app:layout_constraintStart_toStartOf="@id/tv_date_item_ar_fragment_ar"
        app:layout_constraintTop_toBottomOf="@id/tv_date_item_ar_fragment_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="44.00 EGP"/>

    <Space
        android:id="@+id/view_space_item_ar_fragment_ar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_pickup_item_ar_fragment_ar"
        app:layout_constraintBottom_toBottomOf="@id/tv_price_item_ar_fragment_ar"
        app:layout_constraintStart_toEndOf="@id/tv_drop_off_item_ar_fragment_ar"
        app:layout_constraintEnd_toStartOf="@id/button_book_now_item_ar_fragment_ar"/>

    <Button
        android:id="@+id/button_book_now_item_ar_fragment_ar"
        app:layout_constraintStart_toEndOf="@id/view_space_item_ar_fragment_ar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_space_item_ar_fragment_ar"
        app:layout_constraintBottom_toBottomOf="@id/view_space_item_ar_fragment_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/book_now"/>


</androidx.constraintlayout.widget.ConstraintLayout>