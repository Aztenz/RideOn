<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.Material3.Dark.NoActionBar"
    android:background="@color/primary"
    tools:context=".view.login_signup.LoginFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/view_banner_fragment_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_banner"
        android:contentDescription="@string/app_banner"/>

    <TextView
        app:layout_constraintStart_toStartOf="@id/view_banner_fragment_login"
        app:layout_constraintEnd_toEndOf="@id/view_banner_fragment_login"
        app:layout_constraintBottom_toBottomOf="@id/view_banner_fragment_login"
        android:layout_marginBottom="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textAlignment="center"
        android:text="@string/your_1_carpooling_app"/>

    <TextView
        android:id="@+id/view_email_fragment_login"
        app:layout_constraintTop_toBottomOf="@id/view_banner_fragment_login"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="24sp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="23dp"/>

    <EditText
        android:id="@+id/edit_text_email_fragment_login"
        app:layout_constraintTop_toBottomOf="@id/view_email_fragment_login"
        app:layout_constraintStart_toStartOf="@id/view_email_fragment_login"
        app:layout_constraintEnd_toStartOf="@id/view_email_icon_fragment_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="@string/email_hint"
        android:autofillHints="Email"
        android:inputType="textEmailAddress"
        tools:ignore="VisualLintTextFieldSize" />

    <ImageView
        android:id="@+id/view_email_icon_fragment_login"
        app:layout_constraintStart_toEndOf="@id/edit_text_email_fragment_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text_email_fragment_login"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_email_fragment_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/email"
        android:layout_marginEnd="23dp"
        android:contentDescription="@string/email"/>

    <TextView
        android:id="@+id/view_password_fragment_login"
        app:layout_constraintTop_toBottomOf="@id/edit_text_email_fragment_login"
        app:layout_constraintStart_toStartOf="@id/edit_text_email_fragment_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="24sp"
        android:layout_marginTop="23dp"/>

    <EditText
        android:id="@+id/edit_text_password_fragment_login"
        app:layout_constraintTop_toBottomOf="@id/view_password_fragment_login"
        app:layout_constraintStart_toStartOf="@id/view_password_fragment_login"
        app:layout_constraintEnd_toStartOf="@id/view_password_icon_fragment_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="@string/enter_your_password"
        android:autofillHints="Email"
        android:inputType="textPassword"
        tools:ignore="VisualLintTextFieldSize" />

    <ImageView
        android:id="@+id/view_password_icon_fragment_login"
        app:layout_constraintStart_toEndOf="@id/edit_text_password_fragment_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text_password_fragment_login"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_password_fragment_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/password"
        android:layout_marginEnd="23dp"
        android:contentDescription="@string/password"/>

    <Button
        android:id="@+id/button_login_fragment_login"
        app:layout_constraintStart_toStartOf="@+id/view_password_fragment_login"
        app:layout_constraintEnd_toEndOf="@id/view_password_icon_fragment_login"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password_fragment_login"
        app:layout_constraintBottom_toTopOf="@id/view_not_a_member_fragment_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="24sp"
        style="@style/button_text_no_forced_uppercase"
        tools:ignore="VisualLintButtonSize" />

    <TextView
        android:id="@+id/view_not_a_member_fragment_login"
        app:layout_constraintStart_toStartOf="@id/button_login_fragment_login"
        app:layout_constraintEnd_toStartOf="@+id/button_signup_fragment_login"
        app:layout_constraintTop_toBottomOf="@id/button_login_fragment_login"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/not_a_member"/>

    <Button
        android:id="@+id/button_signup_fragment_login"
        app:layout_constraintStart_toEndOf="@+id/view_not_a_member_fragment_login"
        app:layout_constraintEnd_toEndOf="@id/button_login_fragment_login"
        app:layout_constraintTop_toTopOf="@id/view_not_a_member_fragment_login"
        app:layout_constraintBottom_toBottomOf="@id/view_not_a_member_fragment_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/button_dark"
        android:background="@color/transparent"
        android:text="@string/sign_up"
        style="@style/button_text_no_forced_uppercase"/>



</androidx.constraintlayout.widget.ConstraintLayout>