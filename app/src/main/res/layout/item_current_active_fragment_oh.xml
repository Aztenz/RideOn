<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_round"
    android:theme="@style/Theme.Material3.Dark.NoActionBar"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_pickup_item_ca_fragment_oh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_drop_off_item_ca_fragment_oh"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Pickup"/>

    <ImageView
        android:id="@+id/view_arrow_item_ca_fragment_oh"
        app:layout_constraintStart_toEndOf="@id/tv_pickup_item_ca_fragment_oh"
        app:layout_constraintEnd_toStartOf="@id/tv_drop_off_item_ca_fragment_oh"
        app:layout_constraintTop_toTopOf="@id/tv_pickup_item_ca_fragment_oh"
        app:layout_constraintBottom_toBottomOf="@id/tv_pickup_item_ca_fragment_oh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward"
        android:contentDescription="@string/arrow"/>

    <TextView
        android:id="@+id/tv_drop_off_item_ca_fragment_oh"
        app:layout_constraintStart_toEndOf="@id/tv_pickup_item_ca_fragment_oh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_pickup_item_ca_fragment_oh"
        app:layout_constraintBottom_toBottomOf="@id/tv_pickup_item_ca_fragment_oh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="DropOff"/>

    <View
        android:id="@+id/view_line1_item_ca_fragment_oh"
        app:layout_constraintStart_toStartOf="@id/tv_pickup_item_ca_fragment_oh"
        app:layout_constraintEnd_toEndOf="@id/tv_drop_off_item_ca_fragment_oh"
        app:layout_constraintTop_toBottomOf="@id/tv_pickup_item_ca_fragment_oh"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary"/>

    <TextView
        android:id="@+id/tv_date_item_ca_fragment_oh"
        app:layout_constraintStart_toStartOf="@id/view_line1_item_ca_fragment_oh"
        app:layout_constraintEnd_toEndOf="@id/view_line1_item_ca_fragment_oh"
        app:layout_constraintTop_toBottomOf="@id/view_line1_item_ca_fragment_oh"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="21 Jul - 2:35 PM"/>

    <View
        android:id="@+id/view_line2_item_ca_fragment_oh"
        app:layout_constraintStart_toStartOf="@id/tv_date_item_ca_fragment_oh"
        app:layout_constraintEnd_toEndOf="@id/tv_date_item_ca_fragment_oh"
        app:layout_constraintTop_toBottomOf="@id/tv_date_item_ca_fragment_oh"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary"/>

    <Button
        android:id="@+id/button_track_item_ca_fragmnet_oh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/view_line2_item_ca_fragment_oh"
        app:layout_constraintEnd_toStartOf="@id/button_Cancel_item_ca_fragmnet_oh"
        app:layout_constraintTop_toBottomOf="@id/view_line2_item_ca_fragment_oh"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:textSize="18sp"
        android:text="@string/track"
        android:textColor="@color/m3_sys_color_dark_primary"/>

    <Button
        android:id="@+id/button_Cancel_item_ca_fragmnet_oh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/button_track_item_ca_fragmnet_oh"
        app:layout_constraintEnd_toEndOf="@id/view_line2_item_ca_fragment_oh"
        app:layout_constraintTop_toTopOf="@id/button_track_item_ca_fragmnet_oh"
        app:layout_constraintBottom_toBottomOf="@id/button_track_item_ca_fragmnet_oh"
        android:background="@color/transparent"
        android:textSize="18sp"
        android:text="@string/cancel"
        android:textColor="@color/m3_sys_color_dark_primary"/>



</androidx.constraintlayout.widget.ConstraintLayout>