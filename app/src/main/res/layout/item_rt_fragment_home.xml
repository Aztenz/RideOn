<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_rt_item_rt_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_round">
        <ImageButton
            android:id="@+id/button_rt_item_rt_fragment_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:src="@drawable/motorcycle"
            android:background="@color/transparent"
            android:contentDescription="@string/choose_ride_icon_button"/>
    </FrameLayout>


    <TextView
        android:id="@+id/tv_rt_name_item_rt_fragment_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>